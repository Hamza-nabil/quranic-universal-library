<div class="row device-container px-3">
  <%= render 'devise/shared/spline_animation' %>

  <div class="col-md-6 col-12 right">
    <div class="py-3 px-4">
      <ul class="nav nav-tabs nav-tabs-clean" role="tablist">
        <li class="nav-item">
          <a class="nav-link text-dark active" data-bs-toggle="tab" href="#tab-login" role="tab" aria-selected="true">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-dark" data-bs-toggle="tab" href="#tab-signup" role="tab" aria-selected="false">Signup</a>
        </li>
      </ul>

      <div class="tab-content py-3" data-turbo="false">
        <div class="tab-pane fade active show"
             id="tab-login"
             role="tabpanel"
             aria-labelledby="tab-login">
          <%= render 'form' %>
        </div>

        <div class="tab-pane fade"
             id="tab-signup" role="tabpanel"
             aria-labelledby="tab-signup">
          <%= render 'devise/registrations/form' %>
        </div>
      </div>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>

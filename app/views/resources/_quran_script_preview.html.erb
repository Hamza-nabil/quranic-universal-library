<%
  text_type = resource.meta_value('text_type')
  is_image = ['qa_tajweed_image', 'qa_black_image', 'rq_tajweed_image'].include?(text_type)
%>

<div class="bg-primary p-1 rounded quran-text <%= resource.meta_value('font')%> p574-<%= resource.meta_value('font') %>">
  <% if is_image %>
   <div class="d-flex">
     <% preview_verse.words.words.each do |w| %>
        <div class="word">
          <img src="<%= w.send(text_type) %>" alt="<%= w.send(text_type) %>" />
        </div>
     <% end %>
   </div>
  <% else %>
    <div>
      <%= preview_verse.send(text_type).html_safe %>
    </div>
  <% end %>
</div>

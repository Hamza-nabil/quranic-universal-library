  <h4>Developer Resources</h4>
  <div class="tools-container">
    <% developer_tools.each do |tool| %>
      <div class="tool-card <%= tool.id %>">
        <h5><%= tool.title %></h5>
        <p class="info">
          <%= tool.description %>
        </p>

        <%= link_to 'Learn more', tool.url, class: 'cta', style: "background: #{tool.cta_bg};" %>

        <div class="icon">
          <%= image_tag "landing/#{tool.icon}" %>
        </div>

        <div class="info d-flex flex-column">
          <svg
            title="<%= tool.info_tip %>"
            data-controller="tooltip"
            width="24" height="25" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 0.660217C5.376 0.660217 0 6.03622 0 12.6602C0 19.2842 5.376 24.6602 12 24.6602C18.624 24.6602 24 19.2842 24 12.6602C24 6.03622 18.624 0.660217 12 0.660217ZM13.2 18.6602H10.8V11.4602H13.2V18.6602ZM13.2 9.06022H10.8V6.66022H13.2V9.06022Z" fill="white"/>
          </svg>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to 'VIEW ALL RESOURCES', tools_path, class: 'btn-link text-white' %>
</div>

<style>
    .tool-card.segments {
        background: url("<%= image_url 'tools-cards/timestamp.png' %>");
    }

    .tool-card.mushaf-layout {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("<%= image_url 'tools-cards/mushaf-layout.png' %>");
    }

    .tool-card.mutashabihat {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("<%= image_url 'tools-cards/mutashabihat.png' %>");
    }

    .tool-card.quranic-text{
        background: url("<%= image_url 'tools-cards/quran.png' %>");
    }
    .tool-card.translation{
        background: url("<%= image_url 'tools-cards/translation.png' %>");
    }
</style>

<%= render 'tools/header',
           name: 'Mushaf layouts',
           key: 'mushaf_layout'
%>

<div class="page-wrapper container-lg">
  <div class="page-section">
    <h2>Mushaf list</h2>
    <table class="table table-hover">
      <thead>
      <tr>
        <th>
          <%= sort_order_link 'Id', :id %>
        </th>
        <th>Name</th>
        <th>Pages</th>
        <th>Lines per page</th>
        <th>Font</th>
        <th>Qirat</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @mushafs.each do |m| %>
        <tr>
          <td>
            <%= link_to m.id, mushaf_layout_path(m.id) %>
          </td>
          <td><%= m.name %></td>
          <td><%= m.pages_count %></td>
          <td><%= m.lines_per_page %></td>
          <td><%= m.default_font_name %></td>
          <td><%= m.qirat_type&.name %></td>
          <td>
            <%= link_to 'Proofread', mushaf_layout_path(m.id, source_pdf: true), class: 'mr-2 btn btn-info btn-sm' %>
            <% if can?(:manage, m) %>
              <%= link_to 'Fix line align', mushaf_layout_path(m.id, page_alignment: true), class: 'btn btn-info btn-sm' %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>



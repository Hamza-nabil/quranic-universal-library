<div class="row" id="editor-wrap">
  <div class="callout alert alert-dismissible" role="alert">
    <h2>﷽ </h2>
    <h4>
      Ayah: <%= @verse.verse_key %>
      <span class="indopak"> سورہٴ <%= @verse.chapter.name_arabic %></span>.
    </h4>
  </div>

  <% if @access %>
    <div class="callout alert alert-dismissible" role="alert">
      <div class="row">
        <div class="col-md-12">
          <div style="font-size: 30px; margin-top: 10px">
            <%= @access.admin_notes.to_s.html_safe %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="col-md-12">
    <b>Text Uthmani</b>
    <p class="madani" id="ayah_text"><%= @verse.text_uthmani %> </p>
  </div>

  <div class="col-md-12">
    <% @verse.translations.each do |trans| %>
      <b><%= trans.resource_name %></b>
      <p class="<%= trans.language_name %>" id="ayah_text"><%= trans.text.html_safe %> </p>
    <% end %>
  </div>

  <div class="col-md-12">
    <%= form_for @verse, url: word_translations_path(verse_id: @verse.id, language: @language.id), method: :post, html: { class: 'form', autocomplete: 'off' } do |form| %>
      <div id="words">
        <%= form.fields_for :word_translations, @wbw_translations do |trans_form| %>
          <% word = trans_form.object.word %>
          <%= trans_form.hidden_field :word_id %>
          <%= trans_form.hidden_field :language_id, value: @language.id %>

          <div class="well" dir="rtl">
            <p>
              Word# <%= word.location %> (word type: <b><%= word.char_type_name %> </b>:
              <span class="madani"><%= word.text_imlaei %></span>)
            </p>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= trans_form.text_field :text, class: "form-control", placeholder: 'Enter wbw translation here' %>
                  <p class="help-block"><%= trans_form.object.text %></p>
                  <p class="help-block">
                    <%= word.en_translation&.text %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.submit "Save ayah", class: 'btn btn-success', data: { disable_with: 'Please wait...' } %>
      </div>
    <% end %>
  </div>
</div>